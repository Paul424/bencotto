#
# On ubuntu add this virtual host section:
# sudo ln -s ~/bencotto/deployment/apache2/bencotto /etc/apache2/sites-enabled/bencotto
#
<VirtualHost *:80>
	ServerAdmin webmaster@bencotto.com
	ServerName bencotto.local
	#@todo currently pointing to users workarea, but should be a standalone clone where no editing takes place
	#DocumentRoot /usr/local/bencotto/bencotto/bencotto
	DocumentRoot /home/pbor/bencotto/bencotto
	
	#configure logging
	#Temp extra logging
	LogLevel info

	Alias /media_root /home/pbor/bencotto/bencotto/media_root
	<Location /media_root>
		Order allow,deny
		Allow from all
	</Location>

	Alias /static /home/pbor/bencotto/bencotto/static
	<Location /static>
		Order allow,deny
		Allow from all
	</Location>

	# Django settings
	WSGIScriptAlias / /home/pbor/bencotto/bencotto/wsgi_handler.py
	WSGIDaemonProcess bencotto.local processes=1 threads=10 display-name=%{GROUP}
	WSGIProcessGroup bencotto.local

	<Directory /home/pbor/bencotto/bencotto>
		Order allow,deny
		Allow from all
	</Directory>
</VirtualHost>

