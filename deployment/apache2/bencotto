#
# On ubuntu add this virtual host section:
# sudo ln -s ~/bencotto/deployment/apache2/bencotto /etc/apache2/sites-enabled/bencotto
#
<VirtualHost *:80>
	ServerAdmin peebor@gmail.com
	ServerName bencotto.local
	DocumentRoot /usr/local/bencotto/bencotto/bencotto
	#Alias /project_root /usr/local/bencotto/bencotto/bencotto/media_root
	Alias /project_root /home/pbor/bencotto/bencotto
	
	#Temp extra logging
	LogLevel info

	Alias /media_root /usr/local/bencotto/bencotto/bencotto/media_root
	<Location /media_root>
		Order allow,deny
		Allow from all
	</Location>

	Alias /static /usr/local/bencotto/bencotto/bencotto/static
	<Location /static>
		Order allow,deny
		Allow from all
	</Location>

	# Django settings
	WSGIScriptAlias / /usr/local/bencotto/bencotto/bencotto/wsgi_handler.py
	WSGIDaemonProcess bencotto.local processes=1 threads=10 display-name=%{GROUP}
	WSGIProcessGroup bencotto.local

	<Directory /usr/local/bencotto/bencotto/bencotto>
		Order allow,deny
		Allow from all
	</Directory>
</VirtualHost>

